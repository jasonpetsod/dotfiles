#!/bin/bash

SOURCE="sync.quadco.net"
SYNCROOT=~/sync

# need to cd to make mercurial work
cd $SYNCROOT

if [ "`hostname -s`" != "eos" ]; then
    hg pull ssh://$SOURCE/sync
    hg up
fi

if [ -x $SYNCROOT/sync-run ]; then
    $SYNCROOT/sync-run
else
    echo "sync-run script not executable"
    exit 1
fi
