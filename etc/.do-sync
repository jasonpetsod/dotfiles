#!/bin/sh

THIS=$SYNCROOT/etc
DEST=$DESTROOT

if [ "`uname`" = "Darwin" ]; then
    LN=gln
elif [ "`uname`" = "SunOS" ]; then
    echo "sun"
    LN="gnu ln"
else
    LN=ln
fi

for f in `ls -1 $THIS`; do
    if [ "$f" == "RCS-disabled" ]; then
        continue
    fi

    full_f=$THIS/$f
    
    $LN -sfT $full_f $DEST/.$f
done

# make sure the custom (local to host) config dir exists
custom=$DEST/.custom
if [ ! -e $custom ]; then
    mkdir $custom
fi

# add custom config files that need to exist
custom_files=".vimrc .screenrc"
for f in $custom_files; do
    full_f=$custom/$f

    if [ ! -e $full_f ]; then
        touch $full_f
    fi
done
